<Window x:Class="Chat.Client.Desktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Chat.Client.Desktop.Controls"
        Title="Login" Height="450" Width="800">
    <Window.Content>
        <StackPanel  Margin="10">
            <controls:Field x:Name="Id" Display="User ID"/>
            <controls:Field x:Name="Password" Display="Password" IsPassword="True"/>
            <Button Click="Login_OnClick" Content="Login"
                    HorizontalAlignment="Center"/>
            <Button Content="Register" Click="Register_OnClick"/>

        </StackPanel>
    </Window.Content>
</Window>
