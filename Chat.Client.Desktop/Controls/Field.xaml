<UserControl x:Class="Chat.Client.Desktop.Controls.Field"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="250" MinHeight="75">
    <UserControl.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" x:Name="FieldName" x:FieldModifier="private"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="FieldValue" x:FieldModifier="private"/>
            <PasswordBox Grid.Row="0" Grid.Column="1" x:Name="FieldPasswordValue"  Visibility="Collapsed" x:FieldModifier="private"/>
        </Grid>
    </UserControl.Content>
</UserControl>
