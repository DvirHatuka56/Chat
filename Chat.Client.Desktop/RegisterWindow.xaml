<Window x:Class="Chat.Client.Desktop.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:Chat.Client.Desktop.Controls"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Window.Content>
        <StackPanel>
            <controls:Field x:Name="Name" Display="Name"/>
            <controls:Field x:Name="Password" Display="Password" IsPassword="True"/>
            <controls:Field x:Name="RePassword" Display="Repeat Password" IsPassword="True"/>
            <Button Content="Register" Click="Register_OnClick"/>
        </StackPanel>
    </Window.Content>
</Window>
